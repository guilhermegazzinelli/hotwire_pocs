  "version": "0.2.0",
  "configurations": [
    {
      "type": "rdbg",
      "name": "Debug current file",
      "request": "launch",
      "script": "bin/rails s -p 4000",
      "askParameters": true
    },
    {
      "type": "ruby_lsp",
      "name": "Debug raisl server",
      "request": "launch",
      "program": "rails s -p 4000"
    },
    {
      "type": "ruby_lsp",
      "name": "Debug test",
      "request": "launch",
      "program": "ruby -Itest ${relativeFile}"
    },
    {
      "type": "ruby_lsp",
      "name": "Attach debugger",
      "request": "attach"
    }
  ]
}
